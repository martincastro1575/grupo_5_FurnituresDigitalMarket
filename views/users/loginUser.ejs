<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %> 
<body>
    <%- include('../partials/header.ejs') %>
    <div class="main-form">  
        <main>
            <h2>Login</h2>
                <!-- <% if (typeof errors != 'undefined') { %>
                    <p class="is-danger">Error</p>
                    <ul>
                        <% for( let index = 0; index < errors.length; index++ ) { %>
                            <li>
                                <%= errors[index].msg %> 
                            </li>
                        <% } %>
                    </ul>
                <% } %> -->
                <form action="/user/login" method="POST" class="form-login">
                    <div class="form-control">
                        <input type="text" name="nombreUser" id="nombreUser" class="control" placeholder="Ingrese su email" value="<%= locals.oldData ? oldData.nombreUser : null %>">
                        <div class="text-danger">
                            <% if (locals.errors && errors.nombreUser) { %>
                                <%= errors.nombreUser.msg %> 
                            <% } %>
                        </div>
                    </div>
                    <div class="form-control">
                        <input type="password" name="passUser" oninput="onInputPassword(event)" id="passUser" class="control" placeholder="Ingrese su contraseña" required>
                        <div class="text-danger" id="back-error">
                            <% if (locals.errors && errors.passUser) { %>
                                <%= errors.passUser.msg %> 
                            <% } %>
                            <div class="text-danger" id="password-error">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-control-button">
                        <button type="submit" class="button-form">Login</button>
                        <button type="reset" class="button-form">Resert</button>
                    </div>

                    <div class="recordame">
                        <input type="checkbox" name="recordame" id="recordame" class="" placeholder="Ingrese su contraseña">
                         <label for="recordame" class="">Recordame</label>
                    </div>

                </form>            
        </main>
    </div>
    <script src="/js/index.js"></script>
    <%- include('../partials/footer.ejs') %> 
</body>
</html>